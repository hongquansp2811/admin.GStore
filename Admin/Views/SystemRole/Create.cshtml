@model Admin.DTOs.RoleDTO
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "SystemRole", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Người dùng</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/admin">Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Role</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Create</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br />
            <button id="BtnCreate" class="btn btn-success " type="submit"><i class="fa fa-upload"></i>&nbsp;&nbsp;<span class="bold">Thêm mới</span></button>
            <a class="btn btn-danger " href="@Url.Action("GetAll","SystemRole")"><i class="fa fa-undo"></i>&nbsp;&nbsp;<span class="bold">Trở về</span></a>

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <p><i class="text-danger"><strong>* </strong>Các mục đánh dấu (*) là bắt buộc</i></p>

                    </div>
                    <div class="ibox-content">
                        <form method="get" id="formCreateAccount">
                            <div class="row">
                                <div class="col-md-12">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.Label("Tên quyền", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">

                                            @Html.EditorFor(m => m.RoleName, new { htmlAttributes = new { @class = "form-control", @required = "required", placeholder = "Tên Quyền" } })
                                            @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                   
                                </div>
                               
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

