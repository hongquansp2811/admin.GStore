@model Admin.DTOs.UserDto
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Người dùng</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/admin">Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Account</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Create</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-3">
            <br />
            <button id="BtnCreate" class="btn btn-success " type="submit"><i class="fa fa-upload"></i>&nbsp;&nbsp;<span class="bold">Thêm mới</span></button>
            <a class="btn btn-danger " href="@Url.Action("GetAllUser","User")"><i class="fa fa-undo"></i>&nbsp;&nbsp;<span class="bold">Trở về</span></a>

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <p><i class="text-danger"><strong>* </strong>Các mục đánh dấu (*) là bắt buộc</i></p>

                    </div>
                    <div class="ibox-content">
                        <form method="get" id="formCreateAccount">
                            <div class="row">
                                <div class="col-md-9">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.Label("Full Name", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">

                                            @Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control", @required = "required", placeholder = "Full Name" } })
                                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Username ", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">
                                            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @required = "required", placeholder = "Username" } })
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Address", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">
                                            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control", @required = "required", placeholder = "Address" } })
                                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Password", htmlAttributes: new { @class = "form-label col-12" })
                                        <div class="">
                                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @required = "required", type = "password" } })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Comfirm Password", htmlAttributes: new { @class = "form-label col-12" })
                                        <div class="">
                                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Comfirm Password", @required = "required", type = "password" } })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                            @Html.Label("Comfirm Password", htmlAttributes: new { @class = "form-control" })
                                            <div class="">
                                                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Comfirm Password", type = "password" } })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-control" })
                                            </div>
                                        </div>*@
                                    <div class="form-group">
                                        @Html.Label("Email", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">
                                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", @required = "required" } })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Phone", htmlAttributes: new { @class = "control-label col-12", type = "number" })
                                        <div class="">
                                            @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone", @required = "required" } })
                                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-3">

                                    <div class="form-group">
                                        @Html.Label("Access", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">
                                            @Html.DropDownListFor(m => m.Access, new[] { new SelectListItem { Value = "0", Text = "Administrator" }, new SelectListItem { Value = "1", Text = "Customer" } }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Access, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">
                                            @Html.DropDownListFor(m => m.Gender, new[] { new SelectListItem { Value = "1", Text = "Nam" }, new SelectListItem { Value = "2", Text = "Nữ" }, new SelectListItem { Value = "3", Text = "Khác" } }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Status", htmlAttributes: new { @class = "control-label col-12" })
                                        <div class="">
                                            @Html.DropDownListFor(m => m.Status, new[] { new SelectListItem { Value = "1", Text = "Hoạt động" }, new SelectListItem { Value = "2", Text = "Chưa hoạt động" } }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

